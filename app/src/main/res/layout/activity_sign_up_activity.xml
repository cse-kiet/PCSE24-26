<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#103059"
    tools:context=".Sign_up_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:alpha="0.6"
        android:background="@drawable/cardview_left_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="20dp"

        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1A13A"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:text="@string/signUp"
                android:textColor="#000000"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlSymmetry" />




            <EditText
                android:id="@+id/Register_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10sp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_button"
                android:hint="Name"
                android:inputType="textMultiLine"
                android:textColor="#103059"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="10dp"
                app:autoSizeTextType="uniform" />


            <EditText
                android:id="@+id/Register_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10sp"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_button"
                android:hint="@string/address"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                android:singleLine="false"
                android:layout_marginTop="15dp"
                android:textColor="#103059" />



            <EditText
                android:id="@+id/Register_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10sp"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_button"
                android:hint="Email"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="17sp"
                app:autoSizeMinTextSize="12sp"
                android:layout_marginTop="15dp"
                android:inputType="textWebEmailAddress"
                android:textColor="#103059" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/Register_Password_Email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="15dp"
                        android:textColor="#103059"
                        app:autoSizeTextType="uniform" />

                    <ImageButton
                        android:id="@+id/Password_Email_Signup_Visibility_BUtton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="?android:actionBarItemBackground"
                        android:src="@drawable/ic_twotone_remove_red_eye_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/Sign_up"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="@string/signUp"
                    android:textColor="#191970"
                    app:background="@drawable/custom_button"
                    app:backgroundTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBar_Register_With_Email"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/AlreadyRegistered_SignUP"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="?actionBarItemBackground"
                android:text="@string/already_registerd_login_here"

                android:textColor="#191970" />

            <!--            <Button-->
            <!--                android:layout_width="300dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:background="?actionBarItemBackground"-->
            <!--                android:text="Not Registered? register here"-->
            <!--                android:textColor="#191970" />-->

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:alpha="0.7"
        android:background="@drawable/cardview_top_left_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

    </LinearLayout>


