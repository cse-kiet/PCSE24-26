<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_mainActivity_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/MainScrollView_MainActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TopConstraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="160dp"
                    android:paddingHorizontal="20dp"
                    android:text="Pick your favourite"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/PickYourFavourite_RecyclerView_MainActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="7dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="See More"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="15sp"
                        app:autoSizeMaxTextSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
                </androidx.cardview.widget.CardView>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/SliderView_Category_MainActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="20dp"
                    app:iss_auto_cycle="true"
                    android:layout_marginVertical="10dp"
                    app:iss_corner_radius="20"
                    app:iss_delay="0"
                    app:iss_period="2000"
                    app:iss_title_background="?actionBarItemBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Most Liked Products"
                    android:textColor="#1C0447"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/PickYourCategory_RecyclerView_MainActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="7dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="See More"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="15sp"
                        app:autoSizeMaxTextSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Explore Different Tastes"
                    android:textColor="#1C0447"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/PickYourStore_RecyclerView_MainActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/main_activity_bg"
                    android:orientation="horizontal"
                    />


            </LinearLayout>

        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/TopConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <ImageView
                android:id="@+id/Top_ImageView_MainActivity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-9dp"
                android:layout_marginEnd="-14dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_top_bg_main_activity2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/TopYourOrdersButton_ImageButton_MainActivity2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_shopping_bag_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/TopShareButton_ImageButton_MainActivity2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="35dp"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_twotone_share_24"
                app:layout_constraintEnd_toStartOf="@+id/TopYourOrdersButton_ImageButton_MainActivity2"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/Menu_Button_MainActivity2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:padding="5sp"
                android:src="@drawable/ic_menu_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Search_CardView_MainActivity2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="65dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/Top_ImageView_MainActivity2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:src="@drawable/ic_baseline_search" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:enabled="true"
                        android:gravity="center_vertical"
                        android:hint="Search Food"
                        android:inputType="text"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeMinTextSize="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/TopCategory_RecyclerView_MainActivity2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="-50dp"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Top_ImageView_MainActivity2" />

            <ImageButton
                android:id="@+id/TopCategoryRV_SeeAll_ImageButton"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:background="#6FFAA82F"
                android:paddingVertical="25sp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="@+id/TopCategory_RecyclerView_MainActivity2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/TopCategory_RecyclerView_MainActivity2"
                app:layout_constraintTop_toTopOf="@+id/TopCategory_RecyclerView_MainActivity2" />

        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer_navigation_view_mainactivity_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FDFCFC"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="#4CAF50"
        app:elevation="8dp"
        android:theme="@style/Navigation_Drawer"
        app:itemTextAppearance="?attr/textAppearanceListItemSmall"
        app:itemTextColor="#F44336"
        app:headerLayout="@layout/navigation_drawer"
        app:menu="@menu/drawer_navigation_home" />


</androidx.drawerlayout.widget.DrawerLayout>