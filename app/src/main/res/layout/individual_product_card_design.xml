<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="195dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/Main_CardView_Individual_Product_Card_design"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_grad_design_2">


            <ImageView
                android:id="@+id/Individual_Product_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:foregroundGravity="center"
                android:padding="5sp"
                android:src="@drawable/png_pizza"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Individual_Product_Name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/custom_button2"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:paddingHorizontal="4dp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                app:autoSizeMaxTextSize="22sp"
                app:autoSizeMinTextSize="3sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_button2"
                android:fontFamily="monospace"
                android:gravity="start"
                android:text="From       Only"
                android:paddingHorizontal="2dp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                app:autoSizeMaxTextSize="22sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/Individual_Product_Price"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_button2"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Rs 299/-"
                android:textColor="@color/purple_700"
                android:textStyle="bold|italic"
                app:autoSizeMaxTextSize="22sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Tick_Individual_Product_card_design_Add_On"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="60dp"
        android:visibility="gone"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:background="#6616F4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:src="@drawable/ic_tick_mark" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>