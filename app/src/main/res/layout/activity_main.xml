<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="#242124"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar and logo constraint layout-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">



            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#171717"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title=" "
                app:titleTextAppearance="@color/white"
                app:titleTextColor="@color/white" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:elevation="20dp"
            android:id="@+id/AllCategories"
            android:background="@drawable/card_bottom_radius">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="vertical"
                    android:layout_height="110dp"
                    tools:ignore="UseCompoundDrawables,UselessParent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cardElevation="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="90dp">
                        <ImageButton
                            android:scaleType="fitXY"
                            android:padding="5dp"
                            android:background="?actionBarItemBackground"
                            android:id="@+id/PizzaTopCategoryImageButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/png_pizza"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/pizza"
                        app:autoSizeMinTextSize="6sp"
                        app:autoSizeMaxTextSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        app:autoSizeTextType="uniform"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="110dp"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:cardElevation="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="90dp">

                            <ImageButton
                                android:background="?actionBarItemBackground"
                                android:id="@+id/FoodyOfferTopCategoryImageButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:padding="10dp"
                                android:src="@drawable/burger"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/foody_offers"
                            app:autoSizeMinTextSize="6sp"
                            app:autoSizeMaxTextSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform"
                            android:textColor="@color/white"
                            android:layout_marginBottom="10dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="110dp"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:cardElevation="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="90dp">
                            <ImageButton
                                android:scaleType="fitXY"
                                android:id="@+id/PastaTopCategoryImageButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/png_pasta"
                                android:padding="5dp"
                                android:background="?actionBarItemBackground"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/pasta"
                            app:autoSizeMinTextSize="6sp"
                            app:autoSizeMaxTextSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform"
                            android:textColor="@color/white"
                            android:layout_marginBottom="10dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="110dp"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:cardElevation="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="90dp">
                            <ImageButton
                                android:scaleType="fitXY"
                                android:background="?android:actionBarItemBackground"
                                android:id="@+id/BeveragesTopCategoryImageButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/png_icecream"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/beverages_and_icecreams"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            app:autoSizeMinTextSize="6sp"
                            android:singleLine="false"
                            app:autoSizeTextType="uniform"
                            android:textColor="@color/white"
                            android:layout_marginBottom="10dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="110dp"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:cardElevation="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="90dp">
                            <ImageButton
                                android:scaleType="fitXY"
                                android:padding="8dp"
                                android:background="?android:actionBarItemBackground"
                                android:id="@+id/BurgersTopCategoryImageButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/burger"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/burgers"
                            app:autoSizeMinTextSize="6sp"
                            app:autoSizeMaxTextSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform"
                            android:textColor="@color/white"
                            android:layout_marginBottom="10dp"
                            android:layout_height="20dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


        <!-- Foody Offers Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Foody Special Treat"
                android:paddingStart="20sp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="5sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:paddingLeft="20sp"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>

        <!-- Foody Offer Categories Layout -->


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:ignore="UselessParent">
            <!--Automatic Slider for the Offers-->

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/Top_Slider_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_period="1200"
                app:iss_corner_radius="20"
                app:iss_delay="0"
                app:iss_title_background="?actionBarItemBackground"
                />

        </RelativeLayout>






        <!-- Most Popular Treat Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Most Popular Treat"
                android:paddingStart="20sp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="19sp"
                app:autoSizeMinTextSize="5sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:paddingLeft="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/Most_Popular_Treat_See_All"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:paddingRight="20sp"
                android:text="See All"
                android:textAlignment="textEnd"
                android:textColor="@color/Yellow"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>



        <!-- Most Popular Treat CardViews-->

        <!-- MOst Popular Offer Categories Layout -->


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:orientation="horizontal"
                    android:id="@+id/Most_Popular_Treat_RecyclerView_Home"/>



        <!-- Pizza Corner Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"
                android:text="Pizza Treat"
                android:textColor="@color/white"
                android:textStyle="italic"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/Pizza_Treat_See_All"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:paddingRight="20sp"
                android:text="See All"
                android:textAlignment="textEnd"
                android:textColor="@color/Yellow"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Pizza Treat Categories Layout -->

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal"
                    android:id="@+id/Pizza_Treat_RecyclerView_Home"/>



        <!-- Burger Treat Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"
                android:text="Burger Treat"
                android:textColor="@color/white"
                android:textStyle="italic"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/Burger_Treat_See_All"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:paddingEnd="20sp"
                android:text="See All"
                android:textAlignment="textEnd"
                android:textColor="@color/Yellow"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="5sp"
                android:gravity="end"
                android:paddingRight="20sp" />
        </LinearLayout>

        <!-- Burger Treat Categories Layout -->



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:id="@+id/Burger_Treat_RecyclerView_Home"/>



        <!-- Family Combo Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Combo For Family"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingStart="20sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="19sp"
                app:autoSizeMinTextSize="5sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:paddingLeft="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/Combo_for_Family_See_All"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:paddingEnd="20sp"
                android:paddingRight="20sp"
                android:text="See All"
                android:textAlignment="textEnd"
                android:textColor="@color/Yellow"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


        <!-- Family Combo Treat Categories Layout -->



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal"
                    android:id="@+id/Family_Treat_RecyclerView_Home"/>



        <!-- Beverages and IceCreams Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Beverages and IceCreams"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingStart="20sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="19sp"
                app:autoSizeMinTextSize="5sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:paddingLeft="20sp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/Beverages_and_IceCreams_See_All"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:paddingEnd="20sp"
                android:text="See All"
                android:textAlignment="textEnd"
                android:textColor="@color/Yellow"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="5sp"
                android:gravity="end"
                android:paddingRight="20sp" />
        </LinearLayout>

        <!-- Beverages Treat Categories Layout -->



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal"
                    android:id="@+id/Beverages_and_IceCreams_RecyclerView_Home"/>


        <!-- A Different World Treat Text Linear Layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"
                android:text="Different World Treat"
                android:textColor="@color/white"
                android:textStyle="italic"
                app:autoSizeMaxTextSize="19sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/Different_World_See_All"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:paddingEnd="20sp"
                android:text="See All"
                android:textAlignment="textEnd"
                android:textColor="@color/Yellow"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="5sp"
                android:gravity="end"
                android:paddingRight="20sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Different World Treat Categories Layout -->



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal"
                    android:id="@+id/Different_World_Treat_RecyclerView_Home"/>


    </LinearLayout>

</ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer_navigation_view"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#171717"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/Yellow"
        app:itemTextColor="@color/Blanched_Almond"
        app:headerLayout="@layout/navigation_drawer"
        app:menu="@menu/drawer_navigation_home" />


</androidx.drawerlayout.widget.DrawerLayout>