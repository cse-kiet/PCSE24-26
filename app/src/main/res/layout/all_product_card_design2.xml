<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="5sp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/AllProduct2_Product_Image_ImageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/burger"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AllProduct2_Product_Name_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="false"
                android:text="Name of Product calzone product"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Image_ImageView" />

            <ImageView
                android:id="@+id/AllProduct2_Product_Star1_ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_star_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Name_TextView" />

            <ImageView

                android:id="@+id/AllProduct2_Product_Star2_ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_star_24"
                app:layout_constraintStart_toEndOf="@+id/AllProduct2_Product_Star1_ImageView"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Name_TextView" />

            <ImageView
                android:id="@+id/AllProduct2_Product_Star3_ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_star_24"
                app:layout_constraintStart_toEndOf="@+id/AllProduct2_Product_Star2_ImageView"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Name_TextView" />

            <ImageView
                android:id="@+id/AllProduct2_Product_Star4_ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_star_24"
                app:layout_constraintStart_toEndOf="@+id/AllProduct2_Product_Star3_ImageView"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Name_TextView" />

            <ImageView

                android:id="@+id/AllProduct2_Product_Star5_ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_star_24"
                app:layout_constraintStart_toEndOf="@+id/AllProduct2_Product_Star4_ImageView"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Name_TextView" />

            <TextView
                android:id="@+id/AllProduct2_Product_Price_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:text="Rs 230/-"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Star3_ImageView" />

            <TextView
                android:id="@+id/AllProduct2_Product_MRP_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Rs 250/-"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="@+id/AllProduct2_Product_Price_TextView"
                app:layout_constraintStart_toStartOf="@+id/AllProduct2_Product_Price_TextView"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_Price_TextView" />

            <View
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="5dp"
                android:background="#0AAE9E"
                android:rotation="-8"
                app:layout_constraintBottom_toBottomOf="@+id/AllProduct2_Product_MRP_TextView"
                app:layout_constraintEnd_toEndOf="@+id/AllProduct2_Product_MRP_TextView"
                app:layout_constraintStart_toStartOf="@+id/AllProduct2_Product_MRP_TextView"
                app:layout_constraintTop_toTopOf="@+id/AllProduct2_Product_MRP_TextView"
                app:layout_constraintVertical_bias="0.652" />

            <TextView
                android:id="@+id/AllProduct2_Product_DeliveryStatus_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:text="Free Delivery"
                android:textColor="@color/purple_700"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_MRP_TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#E1AE02"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AllProduct2_Product_DeliveryStatus_TextView">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:paddingHorizontal="5sp"
                    android:text="Store -"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/AllProduct2_Product_StoreName_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="3dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:paddingHorizontal="5sp"
                    android:text="FoodyHome"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toTopOf="@+id/AllProduct2_Product_DeliveryStatus_TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/AllProduct2_Product_MRP_TextView"
                app:layout_constraintTop_toTopOf="@+id/AllProduct2_Product_Price_TextView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DCAE11"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/AllProduct2_Product_Discount_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/amaranth_italic"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:text="40%"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="5sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/amaranth_italic"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="OFF"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="5sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>